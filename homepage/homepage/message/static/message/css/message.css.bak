.message{
    padding-top: 1px;
}

.no-message{
    text-align: center;
    font-weight: bold;
}

.message-contents .message-content .username{
    color: #d52349;
    padding-right: 10px;
}

.message-contents .message-content .datetime{
    padding-left: 10px;
    font-style: italic;
}
.message-contents .message-content .content{
    padding-top: 10px
}

.message-contents .message-content .reply{
    float: right;
    margin-right: 30px;
    width: 20px;
    height: 20px;
    background: transparent url("/static/images/reply.png") no-repeat;
}

.message-contents .message-content .reply-message{
    margin-top: 20px;
    margin-left: 150px;
    margin-right: 150px;
    display: none;
    position: relative;
}

.message-contents .message-content .reply-message .message{
    text-align: left;
}

.message-contents .message-content .reply-message thead th{
    padding-left: 20px;
    font-size: 20px;
}

.message-contents .message-content .reply-message .username{
    width: 340px;
    margin-right: 8px;
}

.message-contents .message-content .reply-message .email{
    width: 340px;
    margin-left: 8px;
}

.message-contents .message-content .reply-message .site{
    width: 720px;
}

.message-contents .message-content .reply-message .content{
    min-width: 720px;
    max-width: 720px;
}

.message-contents .message-content .reply-message .submit{
    width: 150px;
    height: 40px;
    border-radius: 5px;
    background: #e53359;
    margin-left: 10px;
    font-size: 17px;
}

.add-message .message{
    font-weight: bold;
    font-size: 20px;
    margin-bottom: 25px;
    margin-left: 10px;
}

.add-message form{
    margin-left: 20px;
    margin-right: 20px;
}

.add-message .username{
    width: 536px;
    margin-right: 10px;
}

.add-message .email{
    width: 536px;
    margin-left: 10px;
}

.add-message .site{
    width: 1110px;
}

.add-message .message-content{
    width: 1110px;
    height: 200px;
}

.add-message .submit{
    width: 150px;
    height: 40px;
    border-radius: 5px;
    background: #e53359;
    margin-left: 10px;
    font-size: 17px;
}
